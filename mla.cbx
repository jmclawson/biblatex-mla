      {\usebibmacro{cite:ibid}}}%
    {\global\boolfalse{cbx@hyperpages}\printtext[bibhyperref]{%
      \printfield[citetitle:\strfield{entrytype}]{shorthand}}\setunit{\addspace}}}

\newbibmacro*{cite:name}{%
 \ifsingletitle%
